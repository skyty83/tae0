	</div>
	<script type="text/javascript" src="https://www.talentbank.co.kr/assets/jwplayer-7.12.2/jwplayer.js"></script>
	<script type="text/javascript">
		jwplayer.key = "YOK5EjiA/8/EgwSAg4lk0jus4US6fwATBREoXNkzsks=";
		function lf_openMovPop(targetdiv) {
			$("div.video-player").removeClass("active");
			$("#"+targetdiv).addClass("active");
			
			if ("videoPlayer1" == targetdiv) {
				jwplayer("playerMatchingPlatform_01").setup({
					file: "https://www.youtube.com/watch?v=-JhoMGoAfFc",
					"width": "100%",
					aspectratio: "16:9",
					autostart: true,
					repeat: false
				});
			} else if ("videoPlayer2" == targetdiv) {
				jwplayer("playerMatchingPlatform_02").setup({
					file: "https://www.youtube.com/watch?v=fjbfzbu8-Ic",
					"width": "100%",
					aspectratio: "16:9",
					autostart: true,
					repeat: false
				});
			}
		}

		function lf_closeMovPop(j) {
			jwplayer("playerMatchingPlatform_0"+j).stop();
			$("#videoPlayer"+j).removeClass("active");
		}
	</script>
